<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="tabFlagEmail" label ="Flag Email">
        <group id="grpFlagEmailConfig" label="Settings">
          <checkBox 
            id="cbIncludeBody"        
            label="Include Body"        
            onAction="OnSettingsCheckboxAction" 
            getPressed="SettingsCheckboxGetPressed"/>
          <checkBox 
            id="cbIncludeAttachments" 
            label="Include File Attachments" 
            onAction="OnSettingsCheckboxAction" 
            getPressed="SettingsCheckboxGetPressed"/>
          <checkBox 
            id="cbEditSubject"        
            label="Edit Subject"        
            onAction="OnSettingsCheckboxAction" 
            getPressed="SettingsCheckboxGetPressed"/>
          <dialogBoxLauncher>
            <button imageMso="BevelTextGallery" id ="btnSettings" label="Additional Settings" onAction="OnSettingsAction" />
          </dialogBoxLauncher>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

